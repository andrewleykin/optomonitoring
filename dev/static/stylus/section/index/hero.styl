.hero
  height 100vh
  min-height 700px
  position relative
  padding-top 90px
  display flex
  flex-direction column
  justify-content center
  z-index 0

.hero__background
  z-index -1
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  overflow hidden

.hero__content
  padding-left 85px
  max-width 820px
  color white

.hero__date
  font-size 14px
  font-weight 300
  letter-spacing 0.14px
  display block
  margin-bottom 15px

.hero__title
  font-size 48px
  font-weight 500
  line-height 48px
  letter-spacing 0.48px
  margin-bottom 30px

.hero__news
  position absolute
  right 0
  top 0
  bottom 0
  width 100%
  max-width 25%
  background-color accent-color
  z-index 10
  display flex
  flex-direction column
  justify-content center
  border-left 1px solid mercury

.hero__news-block
  width 100%

.hero-news
  color white
  font-size 14px
  font-weight 300
  margin-bottom 10px
  width 100%
  padding 40px
  &:hover
    background-color lighten(accent-color, 5)

.hero-news__content
  max-width 325px

.hero-news__info
  margin-bottom 10px

.hero-news__date
  letter-spacing 0.1px
  display inline-block
  margin-right 20px

.hero-news__title
  font-size 14px
  font-weight 500
  text-transform uppercase
  letter-spacing 0.16px
  margin-bottom 20px

.hero-news__text
  font-weight 300
  line-height 18px
  letter-spacing 0.14px