.footer
  padding-top 65px
  position relative
  &:before
    content ''
    display block
    width 1px
    height 100%
    background-color alto
    position absolute
    top 0
    left 50%
    transform translateX(-50%)

.footer__logo
  border-top 1px solid alto
  border-bottom 1px solid alto
  padding 30px 85px
  svg
    width 180px
    height 45px
    fill accent-color

.footer__content
  display flex

.footer__col
  width 50%
  padding 40px 80px 60px
  &--row
    display flex

.footer__about
  margin-bottom 100px

.footer__about-title
  font-size 14px
  font-weight 500
  letter-spacing 0.14px
  margin-bottom 20px

.footer__about-content
  display flex
  flex-wrap wrap
  max-width 640px
  justify-content space-between

.footer__about-text
  color base-color
  max-width 300px
  &:nth-last-child(-n+2)
    margin-top 20px

.footer__contacts
  margin-left 100px
  margin-right 60px
  max-width 265px
  flex none

.footer__contacts-title
  font-size 14px
  font-weight 500
  letter-spacing 0.14px
  margin-bottom 20px

.footer__contacts-policy
  margin-top 80px

.footer__form
  width 100%