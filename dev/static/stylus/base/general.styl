// ОБЩИЕ СТИЛИ

.wrapper 
	width 100%
	max-width 1920px
	margin 0 auto

.container
	width 100%
	max-width 960px
	margin 0 auto

.overflow-hidden
	overflow hidden

.text
	font-size 16px
  line-height 18px
  font-weight 300
  letter-spacing 0.14px


// футер к низу

body 
	display flex
	flex-direction column

.main 
	flex 1
	&--inner
		padding-top 90px
	@media (max-width breakpoint-lg)
		&--inner
			padding-top 70px
